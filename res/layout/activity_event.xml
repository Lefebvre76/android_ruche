<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtViewTitle"
        android:layout_marginRight="27dp"
        android:layout_marginTop="12dp"
        android:text="Date"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/txtViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="21dp"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/txtViewSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtViewDate"
        android:layout_below="@+id/txtViewDate"
        android:text="Schedule"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/txtViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtViewTitle"
        android:layout_alignRight="@+id/txtViewSchedule"
        android:layout_below="@+id/txtViewSchedule"
        android:layout_marginTop="18dp"
        android:text="Description"
        android:textColor="@color/grey" />

</RelativeLayout>
